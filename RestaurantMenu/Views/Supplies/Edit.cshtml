@model RestaurantMenu.Models.Supplie
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>
        Edit
        <a class="btn btn-outline-dark float-right" asp-action="Index">Back to List</a>
    </h1>

    <div class="row">

        <div class="col-md-8">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" hidden class="control-label"></label>
                    <input asp-for="Id" value="@Model.Id" hidden class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ingredient" class="control-label"></label>
                    <input asp-for="Ingredient" value="@Model.I.Name" disabled class="form-control" />
                    <span asp-validation-for="Ingredient" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" type="number" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateExpire" class="control-label"></label>
                    <input asp-for="DateExpire" class="form-control" />
                    <span asp-validation-for="DateExpire" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>